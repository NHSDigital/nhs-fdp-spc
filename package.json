{
  "name": "@nhsdigital/spc",
  "version": "0.0.1-alpha.0",
  "description": "Statistical Process Control (SPC) components and engine for the NHS FDP Design System",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "license": "ISC",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs"
    },
    "./engine": {
      "types": "./dist/engine/index.d.ts",
      "import": "./dist/engine/index.esm.js",
      "require": "./dist/engine/index.cjs"
    },
    "./icons": {
      "types": "./dist/icons/index.d.ts",
      "import": "./dist/icons/index.esm.js",
      "require": "./dist/icons/index.cjs"
    },
    "./styles": "./dist/spc.css"
  },
  "sideEffects": [
    "dist/**/*.css"
  ],
  "files": [
    "dist",
    "packages/nhs-fdp/dist"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run build:parity",
    "build:parity": "npm run clean:dist && npm run build:tokens:smart && npm run build:multi && npm run build:index:esm && npm run build:index:umd && npm run build:core:css && npm run build:component-css && npm run update:css-exports && npm run verify:css-exports && npm run build:components:js && npm run update:js-exports && npm run build:behaviours && npm run schemas:extract && npm run copy:macros && npm run build:types && npm run verify:js-entries && npm run verify:component-parity && npm run verify:css-aliases && npm run build:spc && npm run build:multi-render:optional",
    "build:quiet": "bash scripts/build-parity-quiet.sh",
    "copy:macros": "mkdir -p dist/macros && cp src/macros/*.njk dist/macros/",
    "build:multi-render:optional": "node scripts/run-multi-render-optional.cjs",
    "build:components:js": "node scripts/build-component-js.cjs",
    "update:js-exports": "node scripts/update-js-exports.cjs",
    "build:index:esm": "vite build --config config/vite.index.esm.config.ts",
    "verify:css-exports": "node scripts/verify-css-exports.cjs",
    "update:css-exports": "node scripts/update-css-exports.cjs",
    "verify:js-entries": "node scripts/verify-js-entries.cjs",
    "verify:component-parity": "node scripts/verify-component-parity.cjs",
    "verify:css-aliases": "node scripts/verify-css-aliases.cjs",
    "verify:server-variants": "node scripts/verify-server-variants.cjs",
    "build:behaviours": "tsx scripts/build-behaviours.ts",
    "generate:nunjucks": "tsx scripts/generate-nunjucks-macros.ts",
    "schemas:extract": "tsx scripts/extract-schemas.ts",
    "verify:schema-macro": "tsx scripts/verify-schema-macro-consistency.ts",
    "verify:macro-parity": "tsx scripts/verify-macro-parity.ts",
    "test:macro-parity": "vitest run tests/macroParity --config config/vitest.components.config.ts",
    "build:index:umd": "vite build --config config/vite.index.umd.config.ts",
    "build:multi": "vite build --config config/vite.multi.config.ts",
    "build:legacy": "npm run build:lib && npm run build:core && npm run build:ssr && npm run build:component-css",
    "build:lib": "vite build --config config/vite.config.ts",
    "build:core": "vite build --config config/vite.core.config.ts",
    "build:ssr": "vite build --config config/vite.ssr.config.ts",
    "build:component-css": "vite build --config config/vite.component-css.config.ts",
    "build:core:css": "vite build --config config/vite.core.css.config.ts",
    "build:component-css:dev": "vite build --config config/vite.component-css.dev.config.ts",
    "build:types": "tsc --project tsconfig.build.json",
    "build:tokens": "npx style-dictionary build --config config/style-dictionary.config.js && node scripts/add-use-directives.js",
    "build:tokens:smart": "node scripts/build-tokens-if-needed.cjs",
    "build:tokens:standard": "npx style-dictionary build --config config/style-dictionary.config.js",
    "build:tokens:enhanced": "node config/build-tokens.js",
    "build:tokens:css": "npx ts-node tools/compile-tokens.ts",
    "build:tokens:typescript": "npx style-dictionary build --config style-dictionary.config.js --platform typescript",
    "build:tokens:react": "npx style-dictionary build --config style-dictionary.config.js --platform react",
    "build:all": "npm run build:tokens:enhanced && npm run build:lib",
    "test": "vitest run --config config/vitest.components.config.ts",
    "test:watch": "vitest --config config/vitest.components.config.ts",
    "test:components": "vitest run --config config/vitest.components.config.ts",
    "test:metrics": "vitest run --config config/vitest.metrics.config.ts",
    "test:spc-v2": "vitest run --config config/vitest.spcv2.config.ts",
    "test:smoke": "vitest run src/smoke/smoke.test.tsx --config config/vitest.components.config.ts",
    "test:ssr-components": "vitest run --config config/vitest.ssr.config.ts",
    "test:storybook": "vitest",
    "test:ui": "vitest run --threads",
    "test:coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic --project-token=chpt_ccbfd54ca0760e9",
    "chromatic:ci": "npx chromatic --project-token=chpt_ccbfd54ca0760e9 --exit-zero-on-changes",
    "chromatic:review": "npx chromatic --project-token=chpt_ccbfd54ca0760e9 --auto-accept-changes",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prepublishOnly": "npm run check:tokens && npm run lint && npm test && npm run build",
    "typecheck": "tsc --noEmit -p tsconfig.build.json",
    "build:fast": "npm run build:tokens:smart && vite build --config config/vite.multi.config.ts --emptyOutDir=false",
    "clean:dist": "rimraf dist && mkdir dist",
    "analyze:ssr": "npx tsx scripts/analyze-ssr.ts",
    "analyze:ssr:verbose": "npx tsx scripts/analyze-ssr.ts ./src/components ./ssr-analysis-report",
    "fix:ssr:quickwins": "npx tsx scripts/ssr-autofix.ts",
    "test:ssr": "vitest run tests/ssr-analysis/",
    "examples:build": "npm run build:parity",
    "examples:generate:html": "tsx scripts/generate-static-html-examples.ts",
    "examples:next:sync:behaviours": "node scripts/sync-next-behaviours.cjs",
    "examples:next:dev": "npm run examples:build && npm run examples:next:sync:behaviours && npm run examples:generate:html && npm run examples:next:sync:static-html && cd examples/nextjs && next dev -p 4100",
    "examples:next:dev:fast": "cd examples/nextjs && rimraf .next && (cd ../.. && npm run build:behaviours && npm run examples:next:sync:behaviours && npm run build:components:js && npm run examples:generate:html && npm run examples:next:sync:static-html) && next dev -p 4100",
    "examples:next:build": "npm run examples:build && npm run examples:next:sync:behaviours && cd examples/nextjs && next build",
    "examples:next:start": "npm run examples:next:build && npm run examples:generate:html && npm run examples:next:sync:static-html && cd examples/nextjs && next start -p 4100",
    "examples:next:start:fast": "npm run build:components:js && npm run examples:generate:html && npm run examples:next:sync:static-html && cd examples/nextjs && next start -p 4100",
    "docs:pre": "npm run build:components:js && npm run schemas:extract && npm run examples:generate:html && npm run examples:next:sync:static-html",
    "examples:next:sync:static-html": "node scripts/sync-next-static-html.cjs",
    "examples:next:prebuild": "cd examples/nextjs && next build",
    "examples:express:start": "npm run examples:build && node examples/express-njk/server.mjs",
    "examples:express:serve": "node examples/express-njk/server.mjs",
    "test:runtime": "npm run examples:build && npm run examples:generate:html && DS_FORCE_RESPAWN=1 DS_KILL_STALE=1 DS_RUNTIME_FAST=1 DS_NEXT_DEV=1 DS_RUNTIME_DEBUG=1 DS_SERVER_START_TIMEOUT=25000 playwright test tests/runtime --workers=1",
    "stories:prune": "tsx scripts/prune-stories.ts",
    "stories:prune:dry": "tsx scripts/prune-stories.ts --dry-run",
    "stories:repair": "tsx scripts/repair-pruned-stories.ts",
    "docs:fix-mdx": "tsx scripts/fix-autodocs-mdx.ts",
    "preversion": "npm run check:tokens && npm run lint && npm run test:ssr-components && npm test && npm run build:parity",
    "preversion:smoke": "npm run check:tokens && npm run lint && npm run test:ssr-components && npm run test:smoke && npm run build:parity",
    "version": "git add .",
    "postversion": "git push && git push --tags && npm run publish:package",
    "publish:package": "node scripts/publish-package.cjs",
    "publish:alpha": "npm publish --registry=https://npm.pkg.github.com --tag alpha",
    "publish:beta": "npm publish --registry=https://npm.pkg.github.com --tag beta",
    "publish:latest": "npm publish --registry=https://npm.pkg.github.com --tag latest",
    "release:patch": "npm version patch -m 'chore(release): %s'",
    "release:minor": "npm version minor -m 'chore(release): %s'",
    "release:major": "npm version major -m 'chore(release): %s'",
    "release:prerelease": "npm version prerelease --preid=alpha -m 'chore(release): %s'",
    "release:prerelease:beta": "npm version prerelease --preid=beta -m 'chore(release): %s'",
    "check:tokens": "node scripts/check-token-collisions.cjs",
    "inventory": "tsx scripts/inventory-design-system.ts --md inventory.md --json inventory.json",
    "spc:parity": "tsx scripts/spc-parity-check.ts",
    "spc:metrics": "tsx scripts/spc-metrics-report.ts",
    "spc:codemod:scan": "tsx scripts/spc-codemod-settings.ts",
    "spc:codemod:apply": "tsx scripts/spc-codemod-settings.ts --apply",
    "spc:validate": "tsx scripts/validate-spc-package.ts",
    "spc:codemod:imports": "tsx scripts/codemod-spc-imports.ts",
    "spc:adoption": "tsx scripts/spc-adoption-metrics.ts",
    "build:spc": "vite build --config config/vite.spc.config.ts && vite build --config config/vite.spc.css.config.ts",
    "spc:exports:snapshot": "node scripts/spc-export-snapshot.cjs",
    "spc:exports:check": "node scripts/spc-export-check.cjs"
  },
